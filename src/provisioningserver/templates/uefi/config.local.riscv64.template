{{if debug}}set debug="all"{{endif}}
set default="0"
set timeout=0

menuentry 'Local' {
    echo 'Booting local disk...'
    search --set=root --file /efi/ubuntu/grubriscv64.efi
    if [ $? -eq 0 ]; then
        chainloader /efi/ubuntu/grubriscv64.efi
        boot
    fi
    # This is the default bootloader location according to the UEFI spec.
    search --set=root --file /efi/boot/bootriscv64.efi
    if [ $? -eq 0 ]; then
        chainloader /efi/boot/bootriscv64.efi
        boot
    fi
    # If no bootloader is found exit and allow the next device to boot.
    exit
}
